{
  "name": "lacesong",
  "version": "1.0.0",
  "description": "A cross-platform mod management and loader tool for Unity/Mono games",
  "author": "Lacesong Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pecan-solutions/lacesong.git"
  },
  "keywords": [
    "mod-manager",
    "hollow-knight",
    "silksong",
    "bepinex",
    "unity",
    "modding",
    "cross-platform",
    "avalon"
  ],
  "engines": {
    "dotnet": ">=9.0.0"
  },
  "targetFrameworks": [
    "net9.0-windows",
    "net9.0-macos",
    "net9.0-linux"
  ],
  "dependencies": {
    "lacesong.core": "1.0.0"
  },
  "build": {
    "outputDirectory": "build",
    "configuration": "Release",
    "platform": "Any CPU"
  },
  "supportedGames": [
    {
      "name": "Hollow Knight: Silksong",
      "id": "hollow-knight-silksong",
      "executable": "Hollow Knight Silksong.exe",
      "executableMacOS": "Hollow Knight Silksong",
      "executableLinux": "Hollow Knight Silksong",
      "steamAppId": "1030300",
      "epicAppId": "hollow-knight-silksong",
      "gogAppId": "hollow_knight_silksong",
      "xboxAppId": "9NQZQZQZQZQZ",
      "bepInExVersion": "5.4.22",
      "modDirectory": "Hollow Knight Silksong_Data/Managed/Mods"
    }
  ],
  "modRegistry": {
    "baseUrl": "https://api.lacesong.dev",
    "version": "v1",
    "endpoints": {
      "mods": "/mods",
      "search": "/mods/search",
      "download": "/mods/{id}/download",
      "manifest": "/mods/{id}/manifest"
    }
  },
  "features": {
    "autoGameDetection": true,
    "dependencyResolution": true,
    "profileManagement": true,
    "modUpdating": true,
    "backupRestore": true,
    "crossPlatform": true,
    "avalonUI": true,
    "thunderstoreIntegration": true,
    "bepinexManagement": true
  },
  "platforms": {
    "windows": {
      "minVersion": "10.0.17763",
      "architectures": ["x64"]
    },
    "macos": {
      "minVersion": "10.15",
      "architectures": ["arm64", "x64"]
    },
    "linux": {
      "minVersion": "Ubuntu 18.04",
      "architectures": ["x64"]
    }
  }
}