<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Color Palette - Modern Dark Theme -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#8764B8"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ContentBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="CardBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="HeaderBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="SidebarBrush" Color="#252526"/>
    <SolidColorBrush x:Key="StatusBarBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="ListItemBrush" Color="#404040"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="#969696"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#555555"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#3C3C3C"/>
    
    <!-- Interactive Colors -->
    <SolidColorBrush x:Key="HoverBrush" Color="#4A4A4A"/>
    <SolidColorBrush x:Key="PressedBrush" Color="#5A5A5A"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#0078D4"/>
    
    <!-- Progress Colors -->
    <SolidColorBrush x:Key="ProgressBackgroundBrush" Color="#404040"/>
    <SolidColorBrush x:Key="ProgressForegroundBrush" Color="#0078D4"/>

</ResourceDictionary>
