<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Enhanced Glassmorphic Color Palette -->

    <!-- Base Colors -->
    <Color x:Key="PrimaryColor">#3b82f6</Color>
    <Color x:Key="PrimaryHoverColor">#2563eb</Color>
    <Color x:Key="AccentColor">#06b6d4</Color>
    <Color x:Key="AccentHoverColor">#0891b2</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#ffffff</Color>
    <Color x:Key="SecondaryTextColor">#e5e7eb</Color>
    <Color x:Key="MutedTextColor">#9ca3af</Color>

    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#10b981</Color>
    <Color x:Key="SuccessHoverColor">#059669</Color>
    <Color x:Key="WarningColor">#f59e0b</Color>
    <Color x:Key="WarningHoverColor">#d97706</Color>
    <Color x:Key="ErrorColor">#ef4444</Color>
    <Color x:Key="ErrorHoverColor">#dc2626</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>

    <!-- Glass Effect Brushes -->
    <SolidColorBrush x:Key="GlassPrimaryBrush" Color="#0DFFFFFF" /> <!-- 5% opacity -->
    <SolidColorBrush x:Key="GlassSecondaryBrush" Color="#14FFFFFF" /> <!-- 8% opacity -->
    <SolidColorBrush x:Key="GlassTertiaryBrush" Color="#1AFFFFFF" /> <!-- 10% opacity -->
    <SolidColorBrush x:Key="GlassBorderBrush" Color="#1FFFFFFF" /> <!-- 12% opacity -->
    <SolidColorBrush x:Key="GlassBorderHoverBrush" Color="#26FFFFFF" /> <!-- 15% opacity -->

    <!-- Component Specific Brushes -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#0AFFFFFF" /> <!-- 4% opacity -->
    <SolidColorBrush x:Key="CardHoverBrush" Color="#14FFFFFF" /> <!-- 8% opacity -->
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#1A000000" /> <!-- 10% opacity -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#0D000000" /> <!-- 5% opacity -->
    <SolidColorBrush x:Key="StatusBackgroundBrush" Color="#0A000000" /> <!-- 4% opacity -->

    <!-- Button Brushes -->
    <LinearGradientBrush x:Key="ButtonPrimaryBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0.0" />
        <GradientStop Color="{StaticResource AccentColor}" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="ButtonPrimaryHoverBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryHoverColor}" Offset="0.0" />
        <GradientStop Color="{StaticResource AccentHoverColor}" Offset="1.0" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ButtonSecondaryBrush" Color="#14FFFFFF" /> <!-- 8% opacity -->
    <SolidColorBrush x:Key="ButtonSecondaryHoverBrush" Color="#1AFFFFFF" /> <!-- 10% opacity -->

</ResourceDictionary>
