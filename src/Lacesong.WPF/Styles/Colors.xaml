<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Glassmorphic Color Palette -->

    <!-- Base Colors -->
    <Color x:Key="PrimaryColor">#4D81D9</Color>
    <Color x:Key="AccentColor">#7E57C2</Color>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="#BDBDBD"/>

    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#66BB6A"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFA726"/>
    <SolidColorBrush x:Key_ErrorBrush" Color="#EF5350"/>

    <!-- Brushes with Transparency for Glass Effect -->
    <SolidColorBrush x:Key="GlassFillBrush" Color="#20FFFFFF" />
    <SolidColorBrush x:Key="GlassBorderBrush" Color="#40FFFFFF" />

    <!-- Control-Specific Brushes -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#30FFFFFF" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#40FFFFFF" />
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#50FFFFFF" />
    
    <SolidColorBrush x:Key="ListItemBrush" Color="#28FFFFFF" />
    <SolidColorBrush x:Key="ListItemHoverBrush" Color="#38FFFFFF" />
    
    <SolidColorBrush x:Key="CardBrush" Color="#25FFFFFF" />
    <SolidColorBrush x:Key="SidebarBrush" Color="#15FFFFFF" />
    <SolidColorBrush x:Key="HeaderBrush" Color="#10FFFFFF" />
    <SolidColorBrush x:Key="StatusBarBrush" Color="#10FFFFFF" />

