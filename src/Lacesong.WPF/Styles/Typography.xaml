<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">

    <!-- Font Families -->
    <FontFamily x:Key="PrimaryFontFamily">Segoe UI</FontFamily>
    <FontFamily x:Key="MonospaceFontFamily">Consolas</FontFamily>
    
    <!-- Font Sizes -->
    <sys:Double x:Key="SmallFontSize">12</sys:Double>
    <sys:Double x:Key="NormalFontSize">14</sys:Double>
    <sys:Double x:Key="MediumFontSize">16</sys:Double>
    <sys:Double x:Key="LargeFontSize">18</sys:Double>
    <sys:Double x:Key="ExtraLargeFontSize">24</sys:Double>
    <sys:Double x:Key="TitleFontSize">28</sys:Double>

</ResourceDictionary>
