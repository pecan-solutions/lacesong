<UserControl x:Class="Lacesong.WPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.openxmlformats.org/expression/blend/2008" 
             xmlns:vm="clr-namespace:Lacesong.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:SettingsViewModel}">


    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="⚙️ Settings" FontSize="28" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,10"/>
            <TextBlock Text="Configure Lacesong preferences and manage application settings." 
                       FontSize="16" Foreground="{DynamicResource SecondaryTextBrush}" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- General Settings -->
                <Border Background="{DynamicResource CardBrush}" 
                        CornerRadius="8" Padding="30" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="General Settings" FontSize="20" FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
                        
                        <CheckBox Content="Automatically check for updates on startup" 
                                  IsChecked="{Binding AutoCheckForUpdates}"
                                  Style="{DynamicResource CheckBoxStyle}" Margin="0,0,0,15"/>
                        
                        <CheckBox Content="Create backups before installing mods" 
                                  IsChecked="{Binding CreateBackupsBeforeInstall}"
                                  Style="{DynamicResource CheckBoxStyle}" Margin="0,0,0,15"/>
                        
                        <CheckBox Content="Show advanced options" 
                                  IsChecked="{Binding ShowAdvancedOptions}"
                                  Style="{DynamicResource CheckBoxStyle}" Margin="0,0,0,15"/>
                        
                        <CheckBox Content="Enable telemetry (help improve Lacesong)" 
                                  IsChecked="{Binding EnableTelemetry}"
                                  Style="{DynamicResource CheckBoxStyle}"/>
                    </StackPanel>
                </Border>

                <!-- BepInEx Settings -->
                <Border Background="{DynamicResource CardBrush}" 
                        CornerRadius="8" Padding="30" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="BepInEx Settings" FontSize="20" FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
                        
                        <TextBlock Text="Default BepInEx Version:" FontSize="14" FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,10"/>
                        
                        <ComboBox ItemsSource="{Binding BepInExVersions}" 
                                  SelectedItem="{Binding BepInExVersion}"
                                  Style="{DynamicResource ComboBoxStyle}" Width="200" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Logging Settings -->
                <Border Background="{DynamicResource CardBrush}" 
                        CornerRadius="8" Padding="30" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Logging Settings" FontSize="20" FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
                        
                        <TextBlock Text="Log Level:" FontSize="14" FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,10"/>
                        
                        <ComboBox ItemsSource="{Binding LogLevels}" 
                                  SelectedItem="{Binding LogLevel}"
                                  Style="{DynamicResource ComboBoxStyle}" Width="200" HorizontalAlignment="Left" 
                                  Margin="0,0,0,20"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <Button Content="📁 Open Logs Folder" Command="{Binding OpenLogsFolderCommand}" 
                                    Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,15,0"/>
                            
                            <Button Content="🗑️ Clear Logs" Command="{Binding ClearLogsCommand}" 
                                    Style="{DynamicResource WarningButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Update Settings -->
                <Border Background="{DynamicResource CardBrush}" 
                        CornerRadius="8" Padding="30" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Update Settings" FontSize="20" FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
                        
                        <Button Content="🔄 Check for Updates" Command="{Binding CheckForUpdatesCommand}" 
                                Style="{DynamicResource PrimaryButtonStyle}" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Last checked: Never" FontSize="12" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Import/Export Settings -->
                <Border Background="{DynamicResource CardBrush}" 
                        CornerRadius="8" Padding="30" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Settings Management" FontSize="20" FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Content="📤 Export Settings" Command="{Binding ExportSettingsCommand}" 
                                    Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,15,0"/>
                            
                            <Button Content="📥 Import Settings" Command="{Binding ImportSettingsCommand}" 
                                    Style="{DynamicResource SecondaryButtonStyle}"/>
                        </StackPanel>
                        
                        <Button Content="🔄 Reset to Defaults" Command="{Binding ResetToDefaultsCommand}" 
                                Style="{DynamicResource WarningButtonStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource CardBrush}" 
                CornerRadius="8" Padding="20" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="🔄 Reset to Defaults" Command="{Binding ResetToDefaultsCommand}" 
                        Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,15,0"/>
                
                <Button Content="💾 Save Settings" Command="{Binding SaveSettingsCommand}" 
                        Style="{DynamicResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
