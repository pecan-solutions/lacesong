<Window x:Class="Lacesong.WPF.Views.ModSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Lacesong.WPF.Views"
        Title="Mod Settings" Height="450" Width="400" 
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF0A0A0A" Offset="0" />
            <GradientStop Color="#FF1A1A1A" Offset="0.25" />
            <GradientStop Color="#FF2A2A2A" Offset="0.5" />
            <GradientStop Color="#FF1A1A1A" Offset="0.75" />
            <GradientStop Color="#FF0A0A0A" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

            
        <views:ModSettingsPanel Grid.Row="1" />
    </Grid>
</Window>
