<UserControl x:Class="Lacesong.WPF.Views.BrowseModsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Lacesong.WPF.ViewModels"
             xmlns:conv="clr-namespace:Lacesong.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance vm:BrowseModsViewModel}">
    <UserControl.Resources>
        <conv:RelativeTimeConverter x:Key="RelativeTimeConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- toolbar -->
        <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Padding="16" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0" >
                <TextBox Style="{StaticResource SearchTextBoxStyle}" Width="240" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <ComboBox Width="140" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}"/>
                <CheckBox Content="NSFW" IsChecked="{Binding IncludeNsfw}"/>
                <CheckBox Content="Deprecated" IsChecked="{Binding IncludeDeprecated}"/>
                <Button Style="{StaticResource PrimaryButtonStyle}" Content="Refresh" Command="{Binding LoadPackagesCommand}"/>
            </StackPanel>
        </Border>

        <!-- mod cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Packages}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="0" ItemWidth="280" ItemHeight="380"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorderStyle}" Width="260" Height="360" Margin="10" Padding="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- header -->
                                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0">
                                    <Image Source="{Binding Versions[0].Icon}" Width="32" Height="32"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" Style="{StaticResource BodyStrongTextBlockStyle}" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Owner}" Style="{StaticResource SmallFadedTextBlockStyle}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- description -->
                                <TextBlock Grid.Row="1" Text="{Binding Versions[0].Description}" TextWrapping="Wrap" Style="{StaticResource SmallFadedTextBlockStyle}" Margin="0,8,0,8"/>

                                <!-- footer -->
                                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0">
                                    <StackPanel Orientation="Horizontal" Margin="0">
                                        <TextBlock Text="{Binding RatingScore}"/>
                                        <TextBlock Text="â˜…"/>
                                        <TextBlock Text="{Binding Versions[0].Downloads}"/>
                                        <TextBlock Text="downloads" Style="{StaticResource SmallFadedTextBlockStyle}"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding DateUpdated, Converter={StaticResource RelativeTimeConverter}}" Style="{StaticResource SmallFadedTextBlockStyle}"/>
                                    <Button Style="{StaticResource PrimaryButtonStyle}" Content="Install" HorizontalAlignment="Stretch" Margin="0,4,0,0"
                                            Command="{Binding DataContext.InstallPackageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Details" HorizontalAlignment="Stretch" Command="{Binding DataContext.ShowDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!-- double-click handled inside item template via event triggers in code-behind if needed -->
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
