<Window x:Class="Lacesong.WPF.Views.ModDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:Lacesong.WPF.Converters"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight"
        ResizeMode="NoResize" Background="{DynamicResource RegionBrush}" Title="Mod Details">
    <Window.Resources>
        <conv:RelativeTimeConverter x:Key="RelativeTimeConverter"/>
    </Window.Resources>
    <Border Padding="24" Style="{StaticResource CardBorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- header -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Image Source="{Binding Versions[0].Icon}" Width="64" Height="64"/>
                <StackPanel>
                    <TextBlock Text="{Binding FullName}" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock Text="{Binding Owner}" Style="{StaticResource SmallFadedTextBlockStyle}"/>
                    <TextBlock Text="Last updated: {Binding DateUpdated, Converter={StaticResource RelativeTimeConverter}}"
                               Style="{StaticResource SmallFadedTextBlockStyle}"/>
                </StackPanel>
            </StackPanel>

            <!-- description & versions -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,16,0,16" Height="400" Width="600">
                <StackPanel Spacing="16">
                    <TextBlock Text="{Binding Versions[0].Description}" TextWrapping="Wrap"/>
                    <Expander Header="Versions">
                        <ItemsControl ItemsSource="{Binding Versions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding VersionNumber}" Width="80"/>
                                        <TextBlock Text="{Binding DateCreated, Converter={StaticResource RelativeTimeConverter}}"/>
                                        <TextBlock Text="{Binding Downloads}" Width="80" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                    <Expander Header="Dependencies" IsExpanded="False">
                        <ItemsControl ItemsSource="{Binding Versions[0].Dependencies}"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>

            <!-- footer buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button Style="{StaticResource SecondaryButtonStyle}" Content="Close" IsCancel="True" Width="80"/>
                <Button Style="{StaticResource PrimaryButtonStyle}" Content="Install" Width="100" IsDefault="True" Command="{Binding DataContext.InstallPackageCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
