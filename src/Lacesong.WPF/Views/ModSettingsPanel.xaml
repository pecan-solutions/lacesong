<UserControl x:Class="Lacesong.WPF.Views.ModSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignWidth="400" d:DesignHeight="350">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Mod Settings" Style="{StaticResource TitleTextBlockStyle}"/>

        <StackPanel Grid.Row="1" Margin="0,24,0,0">
            <CheckBox Style="{StaticResource DefaultCheckBoxStyle}" Content="Enable automatic updates" IsChecked="{Binding AutoUpdateEnabled}" Margin="0,0,0,12"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Update channel:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox Style="{StaticResource DefaultComboBoxStyle}" Width="150" SelectedItem="{Binding UpdateChannel}">
                    <ComboBoxItem Content="Stable"/>
                    <ComboBoxItem Content="Beta"/>
                    <ComboBoxItem Content="Alpha"/>
                </ComboBox>
            </StackPanel>
            <CheckBox Style="{StaticResource DefaultCheckBoxStyle}" Content="Preserve configuration on update" IsChecked="{Binding PreserveConfigs}" Margin="0,0,0,12"/>
            <CheckBox Style="{StaticResource DefaultCheckBoxStyle}" Content="Create backup before updating" IsChecked="{Binding BackupBeforeUpdate}"/>
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Status}" VerticalAlignment="Center" Style="{StaticResource SmallFadedTextBlockStyle}"/>
            <Button Grid.Column="1" Style="{StaticResource PrimaryButtonStyle}" Content="Save" Command="{Binding SaveCommand}"/>
        </Grid>
    </Grid>
</UserControl>
