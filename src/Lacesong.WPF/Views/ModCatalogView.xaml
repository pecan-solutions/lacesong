<UserControl x:Class="Lacesong.WPF.Views.ModCatalogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Lacesong.WPF.ViewModels"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:ModCatalogViewModel}">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Mod Management" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,8"/>
            <TextBlock Text="Manage your installed mods and discover new ones." 
                       Style="{StaticResource SubtitleTextBlockStyle}"/>
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search and Filters -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBox Style="{StaticResource SearchTextBoxStyle}" Text="{Binding SearchText}" Width="200" MinWidth="150" Margin="0,0,12,0"/>
                    <CheckBox Style="{StaticResource DefaultCheckBoxStyle}" Content="Installed Only" IsChecked="{Binding ShowInstalledOnly}" Margin="0,0,12,0"/>
                    <CheckBox Style="{StaticResource DefaultCheckBoxStyle}" Content="Enabled Only" IsChecked="{Binding ShowEnabledOnly}" />
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Install from File" Command="{Binding InstallModFromFileCommand}" Margin="0,0,8,0" MinWidth="120"/>
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Install from URL" Command="{Binding InstallModFromUrlCommand}" Margin="0,0,8,0" MinWidth="120"/>
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Refresh" Command="{Binding RefreshModsCommand}" Margin="0,0,8,0" MinWidth="80"/>
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Open Mods Folder" Command="{Binding OpenModsFolderCommand}" Margin="0,0,8,0" MinWidth="140"/>
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Settings" Command="{Binding OpenModSettingsCommand}" MinWidth="80"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Mod Cards -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding InstalledMods}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="0,0,0,16"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="320" Height="280" Margin="0,0,16,16" 
                                Style="{StaticResource CardBorderStyle}"
                                CornerRadius="12"
                                Padding="16">
                            <Border.InputBindings>
                                <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.SelectInstalledModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                            </Border.InputBindings>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Header with Status -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                    <!-- Status Indicator -->
                                    <Ellipse Width="12" Height="12" 
                                             Fill="{Binding IsEnabled, Converter={StaticResource ModStatusColorConverter}}" 
                                             Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" Style="{StaticResource BodyStrongTextBlockStyle}" 
                                               TextWrapping="Wrap" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Description -->
                                <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                           Style="{StaticResource SmallFadedTextBlockStyle}"
                                           TextWrapping="Wrap" Margin="0,0,0,12"
                                           VerticalAlignment="Top"/>
                                
                                <!-- Author and Version -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,16">
                                    <TextBlock Text="{Binding Author, StringFormat='by {0}'}" 
                                               Style="{StaticResource SmallFadedTextBlockStyle}" 
                                               Margin="0,0,12,0"/>
                                    <TextBlock Text="{Binding Version, StringFormat='v{0}'}" 
                                               Style="{StaticResource SmallFadedTextBlockStyle}"/>
                                </StackPanel>
                                
                                <!-- Action Buttons -->
                                <StackPanel Grid.Row="3" Orientation="Vertical">
                                    <!-- Toggle Enable/Disable Button -->
                                    <Button Style="{StaticResource PrimaryButtonStyle}" 
                                            Content="{Binding IsEnabled, Converter={StaticResource EnableDisableTextConverter}}" 
                                            Command="{Binding DataContext.ToggleModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,8"/>
                                    
                                    <!-- Uninstall Button -->
                                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                                            Content="Uninstall" 
                                            Command="{Binding DataContext.UninstallModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
