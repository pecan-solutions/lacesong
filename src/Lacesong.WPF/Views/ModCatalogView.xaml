<UserControl x:Class="Lacesong.WPF.Views.ModCatalogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Lacesong.WPF.ViewModels"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:ModCatalogViewModel}">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Mod Management" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,8"/>
            <TextBlock Text="Manage your installed mods and discover new ones." 
                       Style="{StaticResource SubtitleTextBlockStyle}"/>
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search and Filters -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBox Style="{StaticResource SearchTextBoxStyle}" Text="{Binding SearchText}" Width="200" Margin="0,0,12,0"/>
                    <CheckBox Style="{StaticResource DefaultCheckBoxStyle}" Content="Installed Only" IsChecked="{Binding ShowInstalledOnly}" Margin="0,0,12,0"/>
                    <CheckBox Style="{StaticResource DefaultCheckBoxStyle}" Content="Enabled Only" IsChecked="{Binding ShowEnabledOnly}" />
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Install from File" Command="{Binding InstallModFromFileCommand}" Margin="0,0,8,0"/>
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Install from URL" Command="{Binding InstallModFromUrlCommand}" Margin="0,0,8,0"/>
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Refresh" Command="{Binding RefreshModsCommand}" Margin="0,0,8,0"/>
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Settings" Command="{Binding OpenModSettingsCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Mod List -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Mod List -->
            <ListView Grid.Column="0" ItemsSource="{Binding InstalledMods}" 
                      SelectedItem="{Binding SelectedInstalledMod}"
                      Background="Transparent" BorderThickness="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border x:Name="border"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="12" Margin="0,0,0,8">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource GlassSecondaryBrush}" />
                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GlassBorderBrush}" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource GlassPrimaryBrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Status Indicator -->
                            <TextBlock Grid.Column="0" Text="âœ…" FontSize="16"
                                         Foreground="{Binding IsEnabled, Converter={StaticResource EnabledStatusConverter}}" 
                                         Margin="0,0,12,0" VerticalAlignment="Center"/>
                            
                            <!-- Mod Info -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Name}" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding Description}" Style="{StaticResource SmallFadedTextBlockStyle}"
                                           TextWrapping="Wrap" Margin="0,4,0,0"/>
                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                    <TextBlock Text="{Binding Author, StringFormat='by {0}'}" Style="{StaticResource SmallFadedTextBlockStyle}" Margin="0,0,12,0"/>
                                    <TextBlock Text="{Binding Version, StringFormat='v{0}'}" Style="{StaticResource SmallFadedTextBlockStyle}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Status Text -->
                            <TextBlock Grid.Column="2" Text="{Binding IsEnabled, Converter={StaticResource ModStatusConverter}}" 
                                       Style="{StaticResource SmallFadedTextBlockStyle}" FontWeight="SemiBold"
                                       Foreground="{Binding IsEnabled, Converter={StaticResource ModStatusColorConverter}}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Mod Details -->
            <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Mod Details" Style="{StaticResource SectionHeaderTextBlockStyle}" Margin="0,0,0,12"/>
                    
                    <TextBlock Text="{Binding SelectedInstalledMod.Name}" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,0,0,8"/>
                    
                    <TextBlock Text="{Binding SelectedInstalledMod.Description}" Style="{StaticResource SmallFadedTextBlockStyle}"
                               TextWrapping="Wrap" Margin="0,0,0,8"/>
                    
                    <TextBlock Text="{Binding SelectedInstalledMod.Author, StringFormat='Author: {0}'}" Style="{StaticResource SmallFadedTextBlockStyle}" Margin="0,0,0,4"/>
                    
                    <TextBlock Text="{Binding SelectedInstalledMod.Version, StringFormat='Version: {0}'}" Style="{StaticResource SmallFadedTextBlockStyle}" Margin="0,0,0,16"/>
                    
                    <!-- Action Buttons -->
                    <Button Style="{StaticResource PrimaryButtonStyle}" Content="Enable" Command="{Binding EnableModCommand}" 
                              IsEnabled="{Binding CanEnableModProperty}" Margin="0,0,0,8"/>
                    
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Disable" Command="{Binding DisableModCommand}" 
                              IsEnabled="{Binding CanDisableModProperty}" Margin="0,0,0,8"/>
                    
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="Uninstall" Command="{Binding UninstallModCommand}" 
                              IsEnabled="{Binding CanUninstallModProperty}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
