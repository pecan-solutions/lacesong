<UserControl x:Class="Lacesong.WPF.Views.ModCatalogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.openxmlformats.org/expression/blend/2008" 
             xmlns:vm="clr-namespace:Lacesong.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:ModCatalogViewModel}">


    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Mod Management" FontSize="24" FontWeight="SemiBold" 
                       Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,8"/>
            <TextBlock Text="Manage your installed mods and install new ones." 
                       FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="{DynamicResource CardBrush}" 
                CornerRadius="6" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search and Filters -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBox Text="{Binding SearchText}" Width="180" Height="28" 
                             Style="{DynamicResource SearchTextBoxStyle}" 
                             Margin="0,0,12,0"/>
                    
                    <CheckBox Content="Installed Only" IsChecked="{Binding ShowInstalledOnly}" 
                              Style="{DynamicResource CheckBoxStyle}" Margin="0,0,12,0"/>
                    
                    <CheckBox Content="Enabled Only" IsChecked="{Binding ShowEnabledOnly}" 
                              Style="{DynamicResource CheckBoxStyle}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Install from File" Command="{Binding InstallModFromFileCommand}" 
                            Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,8,0"/>
                    
                    <Button Content="Install from URL" Command="{Binding InstallModFromUrlCommand}" 
                            Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,8,0"/>
                    
                    <Button Content="Refresh" Command="{Binding RefreshModsCommand}" 
                            Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="Settings" Command="{Binding OpenModSettingsCommand}" 
                            Style="{DynamicResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Mod List -->
        <Border Grid.Row="2" Background="{DynamicResource CardBrush}" 
                CornerRadius="6" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Mod List -->
                <ListView Grid.Column="0" ItemsSource="{Binding InstalledMods}" 
                          SelectedItem="{Binding SelectedInstalledMod}"
                          Background="Transparent" BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource ListItemBrush}" 
                                    CornerRadius="4" Padding="12" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Status Indicator -->
                                    <Ellipse Grid.Column="0" Width="10" Height="10" 
                                             Fill="{Binding IsEnabled, Converter={StaticResource EnabledStatusConverter}}" 
                                             Margin="0,0,12,0" VerticalAlignment="Center"/>
                                    
                                    <!-- Mod Info -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" 
                                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                                        <TextBlock Text="{Binding Description}" FontSize="11" 
                                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                                   TextWrapping="Wrap" Margin="0,4,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="{Binding Author, StringFormat='by {0}'}" FontSize="10" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,12,0"/>
                                            <TextBlock Text="{Binding Version, StringFormat='v{0}'}" FontSize="10" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                                            <Ellipse Width="10" Height="10" Margin="12,0,0,0"
                                                     Fill="{Binding CompatibilityStatus, Converter={StaticResource CompatibilityStatusColorConverter}}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Status Text -->
                                    <TextBlock Grid.Column="2" Text="{Binding IsEnabled, Converter={StaticResource ModStatusConverter}}" 
                                               FontSize="11" FontWeight="SemiBold"
                                               Foreground="{Binding IsEnabled, Converter={StaticResource ModStatusColorConverter}}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Mod Details -->
                <Border Grid.Column="2" Background="{DynamicResource ListItemBrush}" 
                        CornerRadius="4" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Mod Details" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="{Binding SelectedInstalledMod.Name}" FontSize="13" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="{Binding SelectedInstalledMod.Description}" FontSize="11" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                   TextWrapping="Wrap" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="{Binding SelectedInstalledMod.Author, StringFormat='Author: {0}'}" FontSize="10" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,4"/>
                        
                        <TextBlock Text="{Binding SelectedInstalledMod.Version, StringFormat='Version: {0}'}" FontSize="10" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,12"/>
                        
                        <!-- Action Buttons -->
                        <Button Content="Enable" Command="{Binding EnableModCommand}" 
                                Style="{DynamicResource AccentButtonStyle}" 
                                IsEnabled="{Binding CanEnableModProperty}" Margin="0,0,0,8"/>
                        
                        <Button Content="Disable" Command="{Binding DisableModCommand}" 
                                Style="{DynamicResource WarningButtonStyle}" 
                                IsEnabled="{Binding CanDisableModProperty}" Margin="0,0,0,8"/>
                        
                        <Button Content="Uninstall" Command="{Binding UninstallModCommand}" 
                                Style="{DynamicResource DangerButtonStyle}" 
                                IsEnabled="{Binding CanUninstallModProperty}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Status -->
        <Border Grid.Row="3" Background="{DynamicResource CardBrush}" 
                CornerRadius="6" Padding="16" Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding ModStatus}" FontSize="12" 
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                <TextBlock Text=" | " FontSize="12" Margin="8,0" 
                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                <TextBlock Text="{Binding InstalledMods.Count, StringFormat='{}{0} mods installed'}" FontSize="12" 
                           Foreground="{DynamicResource SecondaryTextBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
