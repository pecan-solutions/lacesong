<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- base button style -->
    <Style Selector="Button.base">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- primary button style -->
    <Style Selector="Button.primary">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Background" Value="{DynamicResource ButtonPrimaryBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <!-- hover state -->
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="{DynamicResource ButtonPrimaryHoverBrush}" />
        </Style>
    </Style>

    <!-- secondary button style -->
    <Style Selector="Button.secondary">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Background" Value="{DynamicResource ButtonSecondaryBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GlassBorderBrush}" />
        <!-- hover state -->
        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="{DynamicResource ButtonSecondaryHoverBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource GlassBorderHoverBrush}" />
        </Style>
    </Style>

    <!-- card border style for generic containers -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GlassBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="32" />
    </Style>

    <!-- navigation button style -->
    <Style Selector="Button.navButton">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="MinHeight" Value="48" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Margin" Value="8,4" />
        <!-- hover state -->
        <Style Selector="Button.navButton:pointerover">
            <Setter Property="Background" Value="{DynamicResource ButtonSecondaryBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource GlassBorderBrush}" />
        </Style>
    </Style>
</Styles>