<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Lacesong.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Lacesong.Avalonia.Views.InstalledModsView"
             x:DataType="vm:InstalledModsViewModel">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Installed Mods" Classes="h1" Margin="0,0,0,8"/>
            <TextBlock Text="Manage your currently installed mods." Classes="h3"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
            <Button Content="Refresh" Command="{Binding RefreshModsCommand}"/>
            <Button Content="Install from File" Command="{Binding InstallModFromFileCommand}"/>
            <Button Content="Install from URL" Command="{Binding InstallModFromUrlCommand}"/>
            <Button Content="Open Mods Folder" Command="{Binding OpenModsFolderCommand}"/>
        </StackPanel>

        <DataGrid Grid.Row="2" ItemsSource="{Binding InstalledMods}"
                  AutoGenerateColumns="False" CanUserReorderColumns="True"
                  CanUserResizeColumns="True" CanUserSortColumns="True"
                  IsReadOnly="True" GridLinesVisibility="None">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Status" Width="SizeToCells">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Ellipse Width="10" Height="10"
                                     Fill="{Binding IsEnabled, Converter={StaticResource ModStatusColorConverter}}"
                                     VerticalAlignment="Center" HorizontalAlignment="Center" Margin="12,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="*"/>
                <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="SizeToCells"/>

                <DataGridTemplateColumn Header="Actions" Width="SizeToCells">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,12,0">
                                <Button Content="{Binding IsEnabled, Converter={StaticResource EnableDisableTextConverter}}" 
                                        Command="{Binding $parent[UserControl].DataContext.ToggleModEnabledCommand}" 
                                        CommandParameter="{Binding}"/>
                                <Button Content="Uninstall" 
                                        Command="{Binding $parent[UserControl].DataContext.UninstallModCommand}" 
                                        CommandParameter="{Binding}"
                                        Classes="danger"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
