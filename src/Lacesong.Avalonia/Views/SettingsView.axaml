<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Lacesong.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Lacesong.Avalonia.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Settings" Classes="h1" Margin="0,0,0,8"/>
            <TextBlock Text="Configure Lacesong to fit your modding workflow." Classes="h3"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <!-- General Settings -->
                <Border Classes="card">
                    <StackPanel Spacing="12">
                        <TextBlock Text="General" Classes="h2" Margin="0,0,0,8"/>
                        <CheckBox Content="Automatically check for updates on startup" IsChecked="{Binding CurrentSettings.AutoCheckForUpdates}"/>
                        <CheckBox Content="Create backups before installing mods" IsChecked="{Binding CurrentSettings.CreateBackupsBeforeInstall}"/>
                        <CheckBox Content="Show advanced options" IsChecked="{Binding CurrentSettings.ShowAdvancedOptions}"/>
                    </StackPanel>
                </Border>
                
                <!-- Theme Settings -->
                <Border Classes="card">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Theme" Classes="h2" Margin="0,0,0,8"/>
                        <TextBlock Text="Select Theme" Classes="bodyStrong"/>
                        <ComboBox x:Name="ThemeComboBox"
                                 ItemsSource="{Binding Themes}"
                                 SelectedItem="{Binding CurrentSettings.Theme}"
                                 HorizontalAlignment="Left" 
                                 Width="200"/>
                    </StackPanel>
                </Border>


                <!-- Action Buttons and Version -->
                <StackPanel Spacing="12" Margin="0,16,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                        <Button Content="Check for Mod Updates" Command="{Binding CheckModUpdatesCommand}"/>
                        <Button Content="Reset to Defaults" Command="{Binding ResetToDefaultsCommand}"/>
                        <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}" Classes="primary"/>
                    </StackPanel>
                    <TextBlock Text="{Binding CurrentSettings.CurrentVersion, StringFormat='Current Version: {0}'}" Classes="body" HorizontalAlignment="Right" Foreground="{DynamicResource SystemBaseMediumColorBrush}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
