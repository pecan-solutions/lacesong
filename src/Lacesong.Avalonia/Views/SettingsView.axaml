<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Lacesong.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Lacesong.Avalonia.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <Grid RowDefinitions="Auto,*,Auto" Margin="24">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Settings" Classes="Title" Margin="0,0,0,8"/>
            <TextBlock Text="Configure Lacesong to fit your modding workflow." 
                       Classes="Subtitle"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="16">
                <!-- General Settings -->
                <Border Classes="Card">
                    <StackPanel Spacing="12">
                        <TextBlock Text="General" Classes="SectionHeader"/>
                        
                        <CheckBox Content="Automatically check for updates on startup" 
                                  IsChecked="{Binding AutoCheckForUpdates}"/>
                        
                        <CheckBox Content="Create backups before installing mods" 
                                  IsChecked="{Binding CreateBackupsBeforeInstall}"/>
                        
                        <CheckBox Content="Show advanced options" 
                                  IsChecked="{Binding ShowAdvancedOptions}"/>
                        
                        <CheckBox Content="Enable telemetry (helps us improve Lacesong)" 
                                  IsChecked="{Binding EnableTelemetry}"/>
                    </StackPanel>
                </Border>

                <!-- BepInEx Settings -->
                <Border Classes="Card">
                    <StackPanel Spacing="8">
                        <TextBlock Text="BepInEx" Classes="SectionHeader"/>
                        <TextBlock Text="Default BepInEx Version" Classes="BodyStrong"/>
                        
                        <ComboBox ItemsSource="{Binding BepInExVersions}" 
                                  SelectedItem="{Binding BepinexVersion}"
                                  Width="240" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Logging Settings -->
                <Border Classes="Card">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Logging" Classes="SectionHeader"/>
                        <TextBlock Text="Log Level" Classes="BodyStrong"/>
                        
                        <ComboBox ItemsSource="{Binding LogLevels}" 
                                  SelectedItem="{Binding LogLevel}"
                                  Width="240" HorizontalAlignment="Left" 
                                  Margin="0,0,0,12"/>
                        
                        <StackPanel Spacing="8">
                            <Button Content="Open Logs Folder" Command="{Binding OpenLogsFolderCommand}"/>
                            <Button Content="Clear Logs" Command="{Binding ClearLogsCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Update Settings -->
                <Border Classes="Card">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Updates" Classes="SectionHeader"/>
                        
                        <Button Content="Check for Updates" Command="{Binding CheckForUpdatesCommand}" Classes="Primary"/>
                        
                        <TextBlock Text="Last checked: Never" Classes="SmallFaded"/>
                    </StackPanel>
                </Border>

                <!-- Import/Export Settings -->
                <Border Classes="Card">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Settings Management" Classes="SectionHeader"/>
                        
                        <StackPanel Spacing="8">
                            <Button Content="Export Settings" Command="{Binding ExportSettingsCommand}"/>
                            <Button Content="Import Settings" Command="{Binding ImportSettingsCommand}" />
                        </StackPanel>
                        
                        <Button Content="Reset to Defaults" Command="{Binding ResetToDefaultsCommand}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Classes="Card" Padding="16" Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button Content="Reset" Command="{Binding ResetToDefaultsCommand}" MinWidth="100"/>
                <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}" Classes="Primary" MinWidth="120"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
