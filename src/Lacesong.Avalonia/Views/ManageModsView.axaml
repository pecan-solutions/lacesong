<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Lacesong.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Lacesong.Avalonia.Views.ManageModsView"
             x:DataType="vm:ManageModsViewModel">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Manage Mods" Classes="h1" Margin="0,0,0,8"/>
            <TextBlock Text="Manage your currently installed mods." Classes="h3"/>
        </StackPanel>

        <!-- Toolbar -->
        <Border Grid.Row="1" Classes="card" Padding="16" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBox Text="{Binding SearchText, Mode=TwoWay}" Watermark="Search mods..." Width="400"/>
                <Button Content="Refresh" Command="{Binding LoadModsCommand}"/>
                <Button Content="Open Mods Folder" Command="{Binding OpenModsFolderCommand}"/>
            </StackPanel>
        </Border>

        <!-- Mod List and Detail Panel -->
        <Grid Grid.Row="2" ColumnDefinitions="5*,3*">
            <!-- Left: Mod List -->
            <Border Grid.Column="0" Classes="card" Padding="0" Margin="0,0,12,0">
                <ListBox ItemsSource="{Binding Mods}" SelectedItem="{Binding SelectedMod, Mode=TwoWay}" Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="48,*,Auto" Margin="8" RowDefinitions="Auto,Auto,Auto">
                                <!-- Icon -->
                                <Border Grid.Column="0" Grid.RowSpan="3" Width="48" Height="48" CornerRadius="6" ClipToBounds="True" Margin="0,0,12,0" VerticalAlignment="Top" Background="{DynamicResource PlaceholderIconBrush}">
                                    <Image Source="{Binding IconPath, Converter={StaticResource LocalImageConverter}}" Stretch="UniformToFill"/>
                                </Border>
                                
                                <!-- Name -->
                                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding DisplayName}" Classes="h4" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                
                                <!-- Author and Version -->
                                <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,0,0,4">
                                    <TextBlock Text="{Binding Author, StringFormat='by {0}'}" Classes="smallFaded"/>
                                    <TextBlock Text="â€¢" Classes="smallFaded"/>
                                    <TextBlock Text="{Binding Version}" Classes="smallFaded"/>
                                </StackPanel>
                                
                                <!-- Status -->
                                <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="{Binding IsEnabled, Converter={StaticResource ModStatusConverter}}" Classes="smallFaded"/>
                                </StackPanel>

                                <!-- Quick Actions -->
                                <StackPanel Grid.Column="2" Grid.RowSpan="3" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                    <!-- Enable Button -->
                                    <Button Classes="iconButton" 
                                            Command="{Binding $parent[UserControl].DataContext.EnableModCommand}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding IsEnabled, Converter={StaticResource InverseBooleanConverter}}"
                                            ToolTip.Tip="Enable Mod">
                                        <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" Width="16" Height="16"/>
                                    </Button>
                                    
                                    <!-- Disable Button -->
                                    <Button Classes="iconButton" 
                                            Command="{Binding $parent[UserControl].DataContext.DisableModCommand}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding IsEnabled}"
                                            ToolTip.Tip="Disable Mod">
                                        <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm5 11H7v-2h10v2z" Width="16" Height="16"/>
                                    </Button>
                                    
                                    <!-- Uninstall Button -->
                                    <Button Classes="iconButton danger" 
                                            Command="{Binding $parent[UserControl].DataContext.UninstallModCommand}"
                                            CommandParameter="{Binding}"
                                            ToolTip.Tip="Uninstall Mod">
                                        <PathIcon Data="M19 4h-3.5l-1-1h-5l-1 1H5v2h14V4zM6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM8 9h8v10H8V9z" Width="16" Height="16"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- Right: Detail Panel -->
            <Border Grid.Column="1" Classes="card" Padding="24" IsVisible="{Binding SelectedMod, Converter={StaticResource ObjectToBooleanConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="16">
                        <!-- Large Icon -->
                        <Border Width="128" Height="128" CornerRadius="12" ClipToBounds="True" HorizontalAlignment="Left" Background="{DynamicResource PlaceholderIconBrush}">
                            <Image Source="{Binding SelectedMod.IconPath, Converter={StaticResource LocalImageConverter}}" Stretch="UniformToFill"/>
                        </Border>

                        <!-- Name -->
                        <TextBlock Text="{Binding SelectedMod.DisplayName}" Classes="h2"/>

                        <!-- Author -->
                        <TextBlock Classes="h4">
                            <Run Text="by"/>
                            <Run Text="{Binding SelectedMod.Author}"/>
                        </TextBlock>

                        <!-- Details -->
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto" ColumnSpacing="12" RowSpacing="8">
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Version:" Classes="small" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding SelectedMod.Version}" Classes="small"/>
                        </Grid>

                        <!-- Website URL -->
                        <StackPanel Spacing="8" IsVisible="{Binding SelectedMod.WebsiteUrl, Converter={StaticResource StringNotNullOrEmptyConverter}}">
                            <TextBlock Text="Website:" Classes="h4"/>
                            <Button Content="{Binding SelectedMod.WebsiteUrl}" 
                                    Command="{Binding OpenWebsiteCommand}"
                                    CommandParameter="{Binding SelectedMod.WebsiteUrl}"
                                    Classes="link" 
                                    HorizontalAlignment="Left" 
                                    Padding="0"/>
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel Spacing="8" IsVisible="{Binding SelectedMod.Description, Converter={StaticResource StringNotNullOrEmptyConverter}}">
                            <TextBlock Text="Description:" Classes="h4"/>
                            <TextBlock Text="{Binding SelectedMod.Description}" TextWrapping="Wrap" Classes="small"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button Content="Enable"
                                    Command="{Binding EnableModCommand}"
                                    CommandParameter="{Binding SelectedMod}"
                                    IsEnabled="{Binding SelectedMod.IsEnabled, Converter={StaticResource InverseBooleanConverter}}"
                                    Padding="16,12" />
                            <Button Content="Disable"
                                    Command="{Binding DisableModCommand}"
                                    CommandParameter="{Binding SelectedMod}"
                                    IsEnabled="{Binding SelectedMod.IsEnabled}"
                                    Padding="16,12" />
                        </StackPanel>
                        <Button Content="Uninstall Mod" 
                                HorizontalAlignment="Stretch"
                                Command="{Binding UninstallModCommand}"
                                CommandParameter="{Binding SelectedMod}"
                                Classes="danger" Padding="16,12"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>

