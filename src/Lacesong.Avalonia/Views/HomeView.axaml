<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Lacesong.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Lacesong.Avalonia.Views.HomeView"
             x:DataType="vm:HomeViewModel">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid RowDefinitions="Auto,*">
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="Welcome to Lacesong" Classes="h1" Margin="0,0,0,8"/>
                <TextBlock Text="Your all-in-one mod manager for Silksong." Classes="h3" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Main Content -->
            <Grid Grid.Row="1" ColumnDefinitions="*,24,*" RowDefinitions="Auto,24,*">
                <!-- Launch Buttons -->
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="12" Margin="0,0,0,16">
                    <Button Content="Launch Modded" Command="{Binding LaunchModdedCommand}" Classes="primary" MinWidth="160"/>
                    <Button Content="Launch Vanilla" Command="{Binding LaunchVanillaCommand}" MinWidth="160"/>
                </StackPanel>
                
                <!-- Quick Actions -->
                <Border Grid.Row="2" Grid.Column="0" Classes="card">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" Classes="h2" Margin="0,0,0,20"/>
                        <Button Content="Install Mod from File" Command="{Binding InstallModFromFileCommand}" Margin="0,0,0,12"/>
                        <Button Content="Install Mod from URL" Command="{Binding InstallModFromUrlCommand}" Margin="0,0,0,12"/>
                        <Button Content="Browse Mod Catalog" Command="{Binding GoToBrowseModsCommand}" Margin="0,0,0,16"/>
                    </StackPanel>
                </Border>

                <!-- Game Status -->
                <Border Grid.Row="2" Grid.Column="2" Classes="card">
                    <StackPanel>
                        <TextBlock Text="Game Status" Classes="h2" Margin="0,0,0,20"/>
                        <TextBlock Text="{Binding GameStatusText}" TextWrapping="Wrap" Margin="0,0,0,16"/>
                        <Button Content="Detect Game" Command="{Binding DetectGameCommand}" Margin="0,0,0,8"/>
                        <Button Content="{Binding SelectGameButtonText}" Command="{Binding SelectGameDirectoryCommand}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
