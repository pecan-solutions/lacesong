<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Lacesong.Avalonia.ViewModels"
        xmlns:converters="clr-namespace:Lacesong.Avalonia.Converters"
        xmlns:views="clr-namespace:Lacesong.Avalonia.Views"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="720"
        x:Class="Lacesong.Avalonia.MainWindow"
        x:DataType="vm:MainViewModel"
        x:Name="MainWindowRoot"
        Title="Lacesong"
        Height="720" Width="1100"
        MinHeight="600" MinWidth="940"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource PrimaryTextBrush}">

    <Panel>
        <DockPanel>
            <!-- Bottom Bar -->
            <views:BottomBarView DockPanel.Dock="Bottom" DataContext="{Binding BottomBar}"/>

            <!-- Main Content Area -->
            <Grid ColumnDefinitions="260,*">
                <!-- Sidebar -->
                <Border Grid.Column="0" Background="{DynamicResource SidebarBackgroundBrush}" BorderThickness="0,0,1,0" BorderBrush="{DynamicResource GlassBorderBrush}">
                    <ItemsControl x:Name="NavItems" ItemsSource="{Binding NavigationItems}" Margin="12">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:NavigationItem">
                                <Button Command="{Binding NavigateCommand}"
                                        Classes="navButton"
                                        Classes.active="{Binding IsActive}">
                                    <StackPanel Orientation="Horizontal" Spacing="16">
                                        <PathIcon Data="{Binding Icon}" Width="20" Height="20" />
                                        <TextBlock Text="{Binding Label}" 
                                                   VerticalAlignment="Center"
                                                   FontSize="16"
                                                   FontWeight="Normal"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- Content -->
                <ContentControl Grid.Column="1" Margin="24" Content="{Binding CurrentViewModel}" />
            </Grid>
        </DockPanel>
    </Panel>
</Window>
